<div class="modal-header">
  <h2 class="modal-title" id="exampleModalLabel">Forgot your password?</h2>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div class="modal-body">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "メールアドレスにパスワードを送る" %>
    </div>
  <% end %>

  <a href="#" type="link" data-toggle="modal" data-target="#loginModal">ログイン</a>
  <br>
  <a href="#" type="link" data-toggle="modal" data-target="#signupModal">サインアップ</a>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>