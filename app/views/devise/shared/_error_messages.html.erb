<% if resource.errors.any? %>
  <div class="modal-header">
    <h2 class="modal-title" id="exampleModalLabel">再度ご確認ください</h2>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div id="error_explanation">
      <h4 class="text-danger">
        <%= I18n.t("errors.messages.not_saved",
                  count: resource.errors.count,
                  resource: resource.class.model_name.human.downcase)
        %>
      </h4>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
      <a href="#" type="link" data-toggle="modal" data-target="#loginModal">ログイン</a>
      <br>
      <a href="#" type="link" data-toggle="modal" data-target="#signupModal">サインアップ</a>
      <br>
      <a href="#" data-toggle="modal" data-target="#fogetModal">パスワードを忘れたら</a>
  </div>

<% end %>
