<header class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <%= link_to 'Medicine App', root_path, class: "navbar-brand" %>
    <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
    >
        <span class="navbar-toggler-icon"></span>
    </button>
        <% if user_signed_in? %>
            <%= link_to 'プロフィール変更', edit_user_registration_path %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
        <% else %>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#loginModal">ログイン</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#signupModal">サインアップ</button>
        <% end %>
</header>