<% if user_signed_in? %>
    <nav class="drawer-nav" role="navigation" style="z-index: 100000000;">
        <ul class="drawer-menu drawer-menu--right">
            <button type="button" class="drawer-toggle btn btn-outline-warning">
                <span class="fa fa-bell" style="font-size:30px;"></span>
            </button>
            <div id="notiList">
                <%= render "notifications/notiList" %>
            </div>
        </ul>
    </nav>
<% end %>

<nav class="fixed-top navbar navbar-expand-md navbar-dark bg-dark" >
    <% if @notifications.find_by(checked: false) %>
        <div class="bg-danger text-light position-absolute px-2 pb-1" id="drawer-btn" style="top: 11px; right: 45px; border-radius: 50%; z-index: 10;">
            <%= render "layouts/drawer" %>
        </div>
    <% end %>
    <%= link_to 'Medicine App', root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">About</a>
            </li>
            <% if user_signed_in? && current_user.admin? %>
            <li class="nav-item">
                <a class="nav-link" href="/admins">admin</a>
            </li>
            <% end %>
        </ul>
        
        <% if user_signed_in? %>
            <%= link_to "ユーザー詳細へ戻る", user_path(current_user) %>
            <%= link_to 'プロフィール変更', edit_user_registration_path %>
            <%= link_to 'お問い合わせ', user_posts_path(current_user) %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>

            <div class="text-right">
                <button type="button" class="drawer-toggle btn btn-outline-warning">
                    <span class="fa fa-bell" style="font-size:30px;"></span>
                </button>
            </div>
            
        <% else %>
            <div class="text-right nav-link">
            <button type="button" class="btn btn-primary p-0" data-toggle="modal" data-target="#loginModal">ログイン</button>
            </div>
            <div class="text-right nav-link">
            <button type="button" class="btn btn-primary p-0" data-toggle="modal" data-target="#signupModal">サインアップ</button>
            </div>
        <% end %>
    </div>
</nav>