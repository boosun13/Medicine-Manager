<% @prescriptions.order(start_time: "DESC").each do |prescription| %>
    <div class="card my-3" >
            <%= link_to "#{prescription.start_time.strftime("%Y年%m月%d日")}調剤", prescription, class:"card-header btn btn-light text-left" %>
        <div class="card-body" >
            <blockquote class="blockquote mb-0">
                <p><%= prescription.hospital %><br>
                    <%= prescription.doctor %>
                </p>
                <footer class="blockquote-footer">
                    <% prescription.medicines.first(2).each do |medicine| %>
                        <%= medicine.name %><br>
                    <% end %>
                    など
                </footer>
            </blockquote>
        </div>
    </div>
<% end %>

<% unless @prescriptions.present? %>
    <div class="text-center">
        <h6>記録がまだありません</h6>
        <h6>お薬をもらったら記録をしよう！</h6>
        <%= link_to '処方追加', new_prescription_path , class: "btn btn-outline-info mb-5" %>
    </div>
<% end %>