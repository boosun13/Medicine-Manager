<div class="row m-0">
  <%= render "users/sidemenu" %>
  <div class="col border m-4" style="border-radius: 10px;" >
    <div class="border m-4 p-3 bg-light" style="border-radius: 10px; font-size:20px;">
      <p style="">
        <strong>調剤日(薬局でお薬をもらった日):</strong>
        <%= @prescription.start_time.strftime("%Y年%m月%d日") %>
      </p>

      <p style="">
        <strong>処方日(病院を受診した日):</strong>
        <%= @prescription.visit_date.strftime("%Y年%m月%d日") %>
      </p>
    </div>

    <div class="border m-4 p-3 bg-light" style="font-size:22px; border-radius: 10px;">
      <p>
        <strong>医療機関(診療科):</strong><br>
        <%= @prescription.hospital %>
      </p>
    </div>

    <div class="border m-4 p-3 bg-light" style="font-size:20px; border-radius: 10px;">
      <p>
        <strong>処方医師:</strong>
        <%= @prescription.doctor %>
      </p>


      <div id="medicineModal">
      </div>

      <h6>◆処方内容◆</h6>
      <div id="medicineList">
        <%= link_to "この処方にお薬を記録",new_prescription_medicine_path(@prescription), remote: true ,class: "btn btn-outline-info" %><br>
        <%= render "medicines/show",prescription: @prescription %>
      </div>
      
  </div>

  <p class="text-right pr-5" style="font-size:20px;">
    <strong>調剤薬局:</strong>
    <%= @prescription.pharmacy %>
  </p>

  <%= link_to '処方元の記録変更', edit_prescription_path(@prescription), class: " btn btn-outline-primary " %>
  <%= link_to '処方記録を削除する', prescription_path(@prescription), method: :delete, data: { confirm: '削除した記録は戻りませんが削除してよろしいですか？' } , class: " btn btn-outline-danger "%>

  <br>
  <%= link_to "ユーザーページへ戻る", user_path(current_user) %>

</div>