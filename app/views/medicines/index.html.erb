<p id="notice"><%= notice %></p>

<h1>Medicines</h1>

<table>
  <thead>
    <tr>
      <th>Days</th>
      <th>Usage</th>
      <th>Days</th>
      <th>Dose</th>
      <th>Effect</th>
      <th>Side effect</th>
      <th>Prescription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicines.each do |medicine| %>
      <tr>
        <td><%= medicine.days %></td>
        <td><%= medicine.usage %></td>
        <td><%= medicine.days %></td>
        <td><%= medicine.dose %></td>
        <td><%= medicine.effect %></td>
        <td><%= medicine.side_effect %></td>
        <td><%= medicine.prescription %></td>
        <td><%= link_to 'Show', medicine %></td>
        <td><%= link_to 'Edit', edit_medicine_path(medicine) %></td>
        <td><%= link_to 'Destroy', medicine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

