<div class="simple-calendar">
  <div class="calendar-heading text-center mb-2">
    
    <%= link_to  calendar.url_for_previous_view,class:"btn btn--circle btn--circle-c btn--shadow ml-2",remote: true,style:"float: left;" do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <span class="calendar-title border p-3 bg-white" style="border-radius: 50%; float: center;"><%= start_date.year %>å¹´ <%= t('date.month_names')[start_date.month] %></span>

    <%= link_to  calendar.url_for_next_view,class:"btn btn--circle btn--circle-c btn--shadow mr-2",remote: true,style:"float: right;" do %>
      <i class="fas fa-arrow-right"></i>
    <% end %>

  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) , style: "padding:0" do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
