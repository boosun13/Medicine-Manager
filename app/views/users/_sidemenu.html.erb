<div class="sidemenu border bg-light col-lg-5" style="min-height:800px;">
    <h4><%= current_user.name %><br>様、こんにちは<h4>
    <h5 class="text-right">年齢<%= render "layouts/age" %></h5>

    <h6>お薬をもらったら記録をしよう！</h6>
    <%= link_to '処方追加', new_prescription_path , class: "btn btn-outline-info" %>



    <%= month_calendar events: @calendars do |date, calendars| %>
        <%= date.day %>

            <% calendars.each do |calendar| %>
                <button type="button" class="btn btn-primary m-1 p-2" >
                    <%= link_to "", calendar,class:"fa fa-pills text-light" %>
                </button>
            <% end %>
    <% end %>

    </div>

